- model_class = BalanceUtilisateur
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:utilisateur_id) + ':'
  %br
  = @balance_utilisateur.utilisateur.name
%p
  %strong= model_class.human_attribute_name(:montant_cents) + ':'
  %br
  = @balance_utilisateur.montant
%p
  %strong= model_class.human_attribute_name(:mois) + ':'
  %br
  = @balance_utilisateur.mois
%p
  %strong= model_class.human_attribute_name(:annee) + ':'
  %br
  = @balance_utilisateur.annee

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), balance_utilisateurs_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_balance_utilisateur_path(@balance_utilisateur), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), balance_utilisateur_path(@balance_utilisateur), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
