- model_class = Balance
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:nom) + ':'
  %br
  = @balance.nom
%p
  %strong= model_class.human_attribute_name(:montant) + ':'
  %br
  = @balance.montant
%p
  %strong= model_class.human_attribute_name(:fini) + ':'
  %br
  = @balance.fini

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), balances_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_balance_path(@balance), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), balance_path(@balance), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
