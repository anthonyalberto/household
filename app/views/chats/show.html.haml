- model_class = Chat
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:name) + ':'
  %br
  = @chat.name
%p
  = image_tag @chat.image.url(:thumb)

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), chats_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_chat_path(@chat), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), chat_path(@chat), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
