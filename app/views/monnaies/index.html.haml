- model_class = Monnaie
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:iso)
      %th= model_class.human_attribute_name(:pourcent_vers_cad)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @monnaies.each do |monnaie|
      %tr
        %td= link_to monnaie.id, monnaie_path(monnaie)
        %td= monnaie.iso
        %td= monnaie.pourcent_vers_cad
        %td=l monnaie.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_monnaie_path(monnaie), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), monnaie_path(monnaie), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_monnaie_path, :class => 'btn btn-primary'
