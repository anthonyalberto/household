- model_class = Monnaie
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:iso) + ':'
  %br
  = @monnaie.iso
%p
  %strong= model_class.human_attribute_name(:pourcent_vers_cad) + ':'
  %br
  = @monnaie.pourcent_vers_cad

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), monnaies_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_monnaie_path(@monnaie), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), monnaie_path(@monnaie), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
