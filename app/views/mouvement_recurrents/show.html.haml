- model_class = MouvementRecurrent
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:payeur_id) + ':'
  %br
  = @mouvement_recurrent.payeur_id
%p
  %strong= model_class.human_attribute_name(:montant) + ':'
  %br
  = @mouvement_recurrent.montant
%p
  %strong= model_class.human_attribute_name(:type_de_mouvement_id) + ':'
  %br
  = @mouvement_recurrent.type_de_mouvement_id
%p
  %strong= model_class.human_attribute_name(:pourcent_a_facturer_a_lautre) + ':'
  %br
  = @mouvement_recurrent.pourcent_a_facturer_a_lautre
%p
  %strong= model_class.human_attribute_name(:frequence_manuelle) + ':'
  %br
  = @mouvement_recurrent.frequence_manuelle
%p
  %strong= model_class.human_attribute_name(:frequence_automatique) + ':'
  %br
  = @mouvement_recurrent.frequence_automatique

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), mouvement_recurrents_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_mouvement_recurrent_path(@mouvement_recurrent), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), mouvement_recurrent_path(@mouvement_recurrent), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
