= simple_form_for @mouvement, :html => { :class => 'form-horizontal' } do |f|
  = f.association :payeur, :prompt => "Choisir"
  = f.input :montant
  = f.association :type_de_mouvement, label_method: :nom, :prompt => "Choisir"
  = f.input :fini
  = f.input :pourcent_a_facturer_a_lautre

  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), mouvements_path, :class => 'btn'
