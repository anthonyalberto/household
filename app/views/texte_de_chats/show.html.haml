- model_class = TexteDeChat
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:type_de_texte) + ':'
  %br
  = @texte_de_chat.type_de_texte
%p
  %strong= model_class.human_attribute_name(:chat_id) + ':'
  %br
  = @texte_de_chat.chat_id
%p
  %strong= model_class.human_attribute_name(:texte) + ':'
  %br
  = @texte_de_chat.texte

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), texte_de_chats_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_texte_de_chat_path(@texte_de_chat), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), texte_de_chat_path(@texte_de_chat), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
