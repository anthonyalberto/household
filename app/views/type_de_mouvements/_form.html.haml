= simple_form_for @type_de_mouvement, :html => { :class => 'form-horizontal' } do |f|
  = f.input :nom
  = f.input :position
  = f.input :image
  = f.input :revenu
  .form-actions
    = f.button :submit, :class => 'btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), type_de_mouvements_path, :class => 'btn'
