- model_class = TypeDeMouvement
.page-header
  %h1=t '.title', :default => model_class.model_name.human.pluralize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:nom)
      %th= model_class.human_attribute_name(:position)
      %th= model_class.human_attribute_name(:image)
      %th= model_class.human_attribute_name(:revenu)
      %th= model_class.human_attribute_name(:created_at)
      %th=t '.actions', :default => t("helpers.actions")
  %tbody
    - @type_de_mouvements.each do |type_de_mouvement|
      %tr
        %td= link_to type_de_mouvement.id, type_de_mouvement_path(type_de_mouvement)
        %td= type_de_mouvement.nom
        %td= type_de_mouvement.position
        %td= type_de_mouvement.image
        %td= type_de_mouvement.revenu
        %td=l type_de_mouvement.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_type_de_mouvement_path(type_de_mouvement), :class => 'btn btn-mini'
          = link_to t('.destroy', :default => t("helpers.links.destroy")), type_de_mouvement_path(type_de_mouvement), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-mini btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_type_de_mouvement_path, :class => 'btn btn-primary'
