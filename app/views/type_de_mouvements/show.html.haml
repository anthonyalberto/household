- model_class = TypeDeMouvement
.page-header
  %h1=t '.title', :default => model_class.model_name.human

%p
  %strong= model_class.human_attribute_name(:nom) + ':'
  %br
  = @type_de_mouvement.nom
%p
  %strong= model_class.human_attribute_name(:position) + ':'
  %br
  = @type_de_mouvement.position
%p
  %strong= model_class.human_attribute_name(:image) + ':'
  %br
  = @type_de_mouvement.image
%p
  %strong= model_class.human_attribute_name(:revenu) + ':'
  %br
  = @type_de_mouvement.revenu

.form-actions
  = link_to t('.back', :default => t("helpers.links.back")), type_de_mouvements_path, :class => 'btn'
  = link_to t('.edit', :default => t("helpers.links.edit")), edit_type_de_mouvement_path(@type_de_mouvement), :class => 'btn'
  = link_to t('.destroy', :default => t("helpers.links.destroy")), type_de_mouvement_path(@type_de_mouvement), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
